# Scenario: Local proxy with public APIM
# This scenario represents running the SimpleL7Proxy locally while connecting to a public Azure API Management instance

# Azure Environment
AZURE_LOCATION=westus2
AZURE_RESOURCE_GROUP=rg-dev-s7p-local

# Container Configuration
# Not applicable for local deployment

# Network Configuration
# No VNET needed for local deployment
USE_VNET=false

# Authentication Configuration
ENABLE_AUTHENTICATION=false
AUTH_TYPE=none

# Storage Configuration
AZURE_STORAGE_ACCOUNT=stdevs7plocal
USE_ASYNC_STORAGE=false

# Backend Services
# Replace with your actual APIM URL
BACKEND_HOST_URLS=https://your-apim-instance.azure-api.net
DEFAULT_REQUEST_TIMEOUT=100000

# Monitoring Configuration
ENABLE_APP_INSIGHTS=true
AZURE_LOG_ANALYTICS_WORKSPACE=log-dev-s7p-local

# Advanced Configuration
QUEUE_PRIORITY_LEVELS=3
ENABLE_SCALE_RULE=false

# Local Development Settings
S7P_PORT=8080
S7P_ENVIRONMENT=Development
S7P_LOG_LEVEL=Debug
S7P_LOG_HEADERS=true