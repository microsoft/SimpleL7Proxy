# Scenario: Proxy deployed as Azure Container App with public APIM
# This scenario represents deploying the SimpleL7Proxy as an Azure Container App connecting to a public APIM instance

# Azure Environment
AZURE_LOCATION=westus2
AZURE_RESOURCE_GROUP=rg-dev-s7p-aca

# Container Configuration
AZURE_CONTAINER_REGISTRY_NAME=acrdevs7p
AZURE_CONTAINER_APP_NAME=s7p-dev
AZURE_CONTAINER_APP_ENVIRONMENT_NAME=cae-dev-s7p
AZURE_CONTAINER_APP_MIN_REPLICAS=1
AZURE_CONTAINER_APP_MAX_REPLICAS=5

# Network Configuration
# No VNET integration for this scenario
USE_VNET=false

# Authentication Configuration
ENABLE_AUTHENTICATION=false
AUTH_TYPE=none

# Storage Configuration
AZURE_STORAGE_ACCOUNT=stdevs7paca
USE_ASYNC_STORAGE=true

# Backend Services
# Replace with your actual APIM URL
BACKEND_HOST_URLS=https://your-apim-instance.azure-api.net
DEFAULT_REQUEST_TIMEOUT=100000

# Monitoring Configuration
ENABLE_APP_INSIGHTS=true
AZURE_LOG_ANALYTICS_WORKSPACE=log-dev-s7p-aca

# Advanced Configuration
QUEUE_PRIORITY_LEVELS=3
ENABLE_SCALE_RULE=true
HTTP_CONCURRENT_REQUESTS_THRESHOLD=10